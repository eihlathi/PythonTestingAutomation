@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Hello World!</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<script>
    function calcSum() {
        const num1 = document.getElementById("num1").value;
        const num2 = document.getElementById("num2").value;
        const sum = parseInt(num1) + parseInt(num2);
        alert("The sum is: " + sum);
    }
</script>

<h2>My Calculator</h2>
<p>First number: <input type="number" id="num1" class="form-control w-25" /></p>
<p>Second number: <input type="number" id="num2" class="form-control w-25" /></p>
<button onclick="calcSum()" class="btn btn-primary mt-2">Calculate sum</button>


<p>&nbsp;</p>
@for (int i = 0; i < 3; i++) {
    <p>@i</p>
}
